<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:background="@color/colorPrimaryDark">

    <mcs.salazar.jesus.mcsbattleship.view.BattlefieldView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/session_game_opponent_battlefield"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:background="@color/colorGameActionBackground">
    </mcs.salazar.jesus.mcsbattleship.view.BattlefieldView>

    <include layout="@layout/game_actions_layout"
        android:id="@+id/session_game_actions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <mcs.salazar.jesus.mcsbattleship.view.BattlefieldView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/session_game_player_battlefield"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:background="@color/colorGameActionBackground">
    </mcs.salazar.jesus.mcsbattleship.view.BattlefieldView>

</LinearLayout>