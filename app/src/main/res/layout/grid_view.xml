<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mcs.salazar.jesus.mcsbattleship.view.BattleshipView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        custom:shipMainColor="@color/colorPrimaryDark"
        custom:shipSelectionColor="@color/colorAccent"
        custom:shipOrientation="horizontal"/>

    <mcs.salazar.jesus.mcsbattleship.view.BattleshipView
        android:layout_width="120sp"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        custom:shipMainColor="@color/colorAccent"
        custom:shipSelectionColor="@color/colorPrimaryDark"
        custom:shipOrientation="vertical"/>

</RelativeLayout>